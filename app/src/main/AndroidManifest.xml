<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3UX"
        tools:targetApi="31">
        <activity
            android:name=".BottomSheetActivity"
            android:exported="false"
            android:label="@string/title_activity_bottom_sheet"
            android:theme="@style/Theme.Material3UX" />
        <activity
            android:name=".NavigationRailActivity"
            android:exported="false"
            android:label="@string/title_activity_navigation_rail"
            android:theme="@style/Theme.Material3UX" />
        <activity
            android:name=".BottomAppBarActivity"
            android:exported="true"
            android:label="@string/title_activity_bottom_app_bar"
            android:theme="@style/Theme.Material3UX" />
        <activity
            android:name=".TopAppBarActivity"
            android:exported="false"
            android:label="@string/title_activity_top_app_bar"
            android:theme="@style/Theme.Material3UX" />
        <activity
            android:name=".BottomNavbarActivity"
            android:exported="true"
            android:label="@string/title_activity_bottom_navbar"
            android:theme="@style/Theme.Material3UX" />
        <activity
            android:name=".SelectionsActivity"
            android:exported="true"
            android:label="@string/title_activity_selections"
            android:theme="@style/Theme.Material3UX" />
        <activity
            android:name=".TextFieldsActivity"
            android:exported="true"
            android:label="@string/title_activity_text_fields"
            android:theme="@style/Theme.Material3UX" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3UX">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>